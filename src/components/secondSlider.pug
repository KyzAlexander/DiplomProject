section.secondSlider.container
    div.textBlock
        p.textBlock__textOverTitle Our Instructors                      
        h1.textBlock__title Meet Our Extreamly <br> Talented Trainers
    div.wrapper
        input#leftArrow(type="radio")
        input#rightArrow(type="radio")
        div.slides
            div.slides__slide.slideOne
                img(src="./assets/images/secondSlider1.png", alt="Instructor")
                h3 Jason Holder
                p Cardio Expert
            div.slides__slide.slideTwo
                img(src="./assets/images/secondSlider2.png", alt="Instructor")
                h3 Monica Sellesa
                p Nutrition Expert
            div.slides__slide.slideThree
                img(src="./assets/images/secondSlider3.png", alt="Instructor")
                h3 Jhonson Russoe
                p Meditation Expert
        div.controls 
            label.left(for="leftArrow")
                div.leftArrow              
                    img.arrow(src="./assets/images/arrow.png", alt="")
                    img.arrowHover(src="./assets/images/arrowHover.png", alt="")   
            label.right(for="rightArrow")
                div.rightArrow              
                    img.arrow(src="./assets/images/arrow.png", alt="")
                    img.arrowHover(src="./assets/images/arrowHover.png", alt="")